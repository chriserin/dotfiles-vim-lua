{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode-transparent",
  "tools": {
    "write": true,
    "bash": true,
    "webfetch": true
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1",
        "context": 131072
      },
      "models": {
        "qwen3-coder:30b": {
          "name": "qwen3-coder:30b"
        },
        "qwen2.5-coder:32b": {
          "name": "qwen2.5-coder:32b"
        },
        "qwen3:8b": {
          "name": "qwen3:8b"
        },
        "qwen3:instruct": {
          "name": "qwen3:instruct"
        },
        "llama3.1:8b": {
          "name": "llama3:8b"
        },
        "qwen3:latest": {
          "name": "qwen3:latest"
        },
        "qwen3:30b": {
          "name": "qwen3:30b"
        },
        "gpt-oss:20b": {
          "name": "gpt-oss:20b"
        }
      }
    }
  },
  "mcp": {
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest", "--browser", "webkit"]
    },
    "context7": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "@upstash/context7-mcp"]
    },
    "github": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer <TOKEN>"
      }
    }
  },
  "keybinds": {
    "editor_open": "ctrl+g",
    "input_submit": "enter",
    "messages_page_up": "ctrl+alt+u",
    "messages_page_down": "ctrl+alt+d",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow",
      "kubectl get secrets": "deny",
      "kubectl get secret": "deny",
      "kubectl get *": "allow",
      "rg *": "allow",
      "rm -rf *": "ask",
      "rm *": "ask"
    }
  },
  "agent": {
    "pair": {
      "description": "AI pair programmer that keeps you in the loop by asking for your confirmation before executing any commands and edits",
      "permission": {
        "webfetch": "allow",
        "edit": "ask",
        "bash": {
          "git status": "allow",
          "git diff": "allow",
          "npm run *": "allow",
          "pnpm run *": "allow",
          "bun run *": "allow",
          "ls": "allow",
          "pwd": "allow",
          "kubectl get secrets": "deny",
          "kubectl get secret": "deny",
          "kubectl get *": "allow",
          "rg *": "allow",
          "*": "ask"
        }
      }
    }
  },
  "experimental": {
    "hook": {
      "session_completed": [
        {
          "command": ["pplay", "happy-chime-notice.mp3"]
        }
      ]
    }
  }
}
