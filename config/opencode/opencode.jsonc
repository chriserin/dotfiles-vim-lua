{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "enabled": true,
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest", "--browser", "webkit"]
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["bunx", "@upstash/context7-mcp"]
    },
    "github": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer <TOKEN>"
      }
    }
  },
  "keybinds": {
    "input_submit": "enter",
    "input_newline": "shift+enter"
  },
  "permission": {
    "webfetch": "allow",
    "edit": "ask",
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow",
      "kubectl get secrets": "deny",
      "kubectl get secret": "deny",
      "kubectl get *": "allow",
      "rg *": "allow",
      "*": "ask"
    }
  },
  "experimental": {
    "hook": {
      "session_completed": [
        {
          "command": ["pplay", "happy-chime-notice.mp3"]
        }
      ]
    }
  }
}
